<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:id="@+id/cv_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/padding_7"
        android:layout_marginRight="@dimen/padding_7"
        android:backgroundTint="@color/colorPrimary"
        app:cardCornerRadius="@dimen/keyword_item_radius">

        <LinearLayout
            android:id="@+id/ln_keyword_item"
            android:layout_width="match_parent"
            android:layout_height="@dimen/keyword_item_high_size"
            android:padding="@dimen/padding_25"
            android:gravity="center">
            <TextView
                android:id="@+id/tvKeyword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_20"
                android:textColor="@color/colorTextKeywordItem"/>
        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>